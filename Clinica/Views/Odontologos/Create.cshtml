    <!-- Custom styles for this template-->
    <link href="css/sb-admin-2.min.css" rel="stylesheet">

</head>



<body class="bg-gradient-primary">
    <center>


        <div class="container">

            <div class="">
                <div class="">
                    <!-- Nested Row within Card Body -->


                    <div class="row">
                        <div class="col-lg-5 d-none  bg-light"> </div>
                        <div class="col-lg-10">
                            <div class="p-5">
                                <div class="text-center">
                                    <div class="card-body">

                                        <div class="card shadow mb-4">
                                            <div class="card-header py-3">

                                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                                    <h1 class="h4 text-gray-900 mb-4">Crear Odontologo!</h1>
                                                    <hr />
                                            </div>


                                            <form method="POST" action="" @Url.Action("Create", "Odontologos") " class="user">
                                                <div class="form-group row">
                                                    <div class="col-sm-6 mb-3 mb-sm-0">

                                                        <input type="text" class="form-control form-control-user" placeholder="Ingrese Nombre Odontologo"
                                                               name="Nombres" value="@Model.Nombres">
                                                        @Html.ValidationMessageFor(Model => Model.Nombres, null, new { @class = "text-danger" })
                                                    </div>


                                                    <div class="col-sm-6">
                                                        <input type="text" class="form-control form-control-user" placeholder="Ingrese Apellido Odontologo"
                                                               name="Apellidos" value="@Model.Apellidos">
                                                        @Html.ValidationMessageFor(Model => Model.Apellidos, null, new { @class = "text-danger" })
                                                    </div>

                                                </div>

                                                <div class="form-group row">
                                                    <div class="col-sm-6 mb-3 mb-sm-0">

                                                        <input type="text" class="form-control form-control-user" placeholder="Ingrese Telefono"
                                                               name="Telefonos" value="@Model.Telefonos">
                                                        @Html.ValidationMessageFor(Model => Model.Telefonos, null, new { @class = "text-danger" })
                                                    </div>

                                                    <div class="col-sm-6">
                                                        <input type="text" class="form-control form-control-user" placeholder="Ingrese Direccion"
                                                               name="Direcciones" value="@Model.Direcciones">
                                                        @Html.ValidationMessageFor(Model => Model.Direcciones, null, new { @class = "text-danger" })
                                                    </div>



                                                </div>
                                                <div class="form-group row">
                                                    <div class="col-sm-6 mb-3 mb-sm-0">

                                                        <input type="email" class="form-control form-control-user" placeholder="Ingrese Correo"
                                                               name="Correos" value="@Model.Correos">
                                                        @Html.ValidationMessageFor(Model => Model.Correos, null, new { @class = "text-danger" })
                                                    </div>

                                                </div>

                                                <div class="form-group row">


                                                </div>
                                                <hr />
                                                <!--  <a href="" class="btn btn-primary btn-user btn-block"> -->
                                                <center>
                                                    <button type="submit" class="btn btn-primary">Grabar</button>
                                                </center>
                                                </a>




                                            </form>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                </table>


            </div>
        </div>
        <!-- Bootstrap core JavaScript-->
        <script src="vendor/jquery/jquery.min.js"></script>
        <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

        <!-- Core plugin JavaScript-->
        <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

        <!-- Custom scripts for all pages-->
        <script src="js/sb-admin-2.min.js"></script>
    </center>
</body>

</html>