@model Clinica.Models.Remuneracion
<!DOCTYPE html>
<html lang="en">

<head>


    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin 2 - Register</title>

    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="css/sb-admin-2.min.css" rel="stylesheet">

</head>



<body class="bg-gradient-primary">
    <center>


        <div class="container">

            <div class="">
                <div class="">
                    <!-- Nested Row within Card Body -->


                    <div class="row">
                        <div class="col-lg-5 d-none  bg-light"> </div>
                        <div class="col-lg-10">
                            <div class="p-5">
                                <div class="text-center">
                                    <div class="card-body">

                                        <div class="card shadow mb-4">
                                            <div class="card-header py-3">

                                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                                    <h1 class="h4 text-gray-900 mb-4">Crear Remuneracion</h1>
                                                    <hr />
                                            </div>
                                            <form method="POST" action="@Url.Action("Create", "Remuneraciones")" class="user">
                                                <div class="form-group row">
                                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                                        <input type="text" class="form-control form-control-user" value="@Model.Nombre" name="Nombre" placeholder="Nombre">
                                                        @Html.ValidationMessageFor(Model => Model.Nombre, null, new { @class = "text-danger" })
                                                    </div>

                                                    <div class="col-sm-6">
                                                        <input type="text" class="form-control form-control-user" value="@Model.Apellido" name="Apellido" placeholder="Apellido">
                                                        @Html.ValidationMessageFor(Model => Model.Apellido, null, new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                                <div class="form-group">

                                                    <select class="custom-select custom-select-sm form-control form-control-sm" name="Cargo" id="Cargo" placeholder="Cargo">

                                                        <option class="form-control">Dr DANNY</option>
                                                        <option class="form-control">Dr CLAUDIO</option>
                                                        <option class="form-control">Dr FABIAN</option>


                                                    </select>
                                                    @Html.ValidationMessageFor(Model => Model.Cargo, null, new { @class = "text-danger" })
                                                </div>
                                                
                                                <div class="form-group">
                                                    <input type="number" class="form-control form-control-user" value="@Model.Monto" name="Monto" placeholder="Monto">
                                                    @Html.ValidationMessageFor(Model => Model.Monto, null, new { @class = "text-danger" })
                                                </div>
                                                
                                                <br />
                                                <center>
                                                    <button type="submit" class="btn btn-primary">Grabar</button>
                                                </center>
                                                </a>


                                            </form>



                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                </table>


            </div>
        </div>
        <!-- Bootstrap core JavaScript-->
        <script src="vendor/jquery/jquery.min.js"></script>
        <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

        <!-- Core plugin JavaScript-->
        <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

        <!-- Custom scripts for all pages-->
        <script src="js/sb-admin-2.min.js"></script>
    </center>
</body>

</html>
